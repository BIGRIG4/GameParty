<!-- views/rsvp-new.handlebars -->


<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3>Welcome To The Party</h3>
                    <div class="lead">
                        Event: {{event.title}}
                    </div>
                </div>
                <div class="card-text">
                    <form action="/events/{{event.id}}/rsvps" method="post">
                        <div class="form-group">
                            <label for="title">UserName</label>
                            <input name="name" class="form-control" placeholder="ex.)BigRig42" />
                        </div>
                        <div class="form-group">
                            <label for="title">What Console do you play on?</label>
                            <input name="name" class="form-control" placeholder="Xbox? Playstation? PC?" />
                        </div>
                        <div class="form-group">
                            <label for="title">Mic or no Mic</label>
                            <input name="name" class="form-control" placeholder="if no mic put N/A" />
                        </div>
                        <div class="form-group">
                            <label for="title">Why you like the game?</label>
                            <input name="name" class="form-control" placeholder="The game looks real" />
                        </div>
                        <div class="text-right">
                            <a href="/" class='text-muted mr-2'>Cancel</a>
                            <button type="submit" class="btn btn-primary" name="button">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
